{{#is "tag"}}
  {{#tag}}
    <div id="current-tag" class="fixed bottom-0 inset-x-0 bg-white z-50">
      <div class="container mx-auto lg:mx-0 px-2 lg:px-4 xl:pl-8 xl:pr-32 py-2 text-xxs sm:text-xs flex justify-between">
        <span>
          current tag: <a href="{{url}}">{{name}}</a>
        </span>
        <a href="/">clear</a>
      </div>
    </div>
  {{/tag}}
{{/is}}